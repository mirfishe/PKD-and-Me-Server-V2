{
  "name": "pkd-and-me-server",
  "version": "0.6.0",
  "description": "Project using Node.js to allow users to rate and review works by and related to Philip K. Dick.",
  "author": "Michael Fisher",
  "copyrightYear": "2024",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/mirfishe/PKD-and-Me-Server-V2"
  },
  "private": true,
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "startOLD": "node app.js",
    "start": "nodemon",
    "amazon": "node ./resources/amazonFetch.js production",
    "amazonall": "node ./resources/amazonFetch.js production All",
    "amazondev": "node ./resources/amazonFetch.js development",
    "amazonalldev": "node ./resources/amazonFetch.js development All"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "**/build/**",
      "**/dist/**",
      "**/logs/**",
      "**/resources/**",
      "**/sql/**",
      "**/src/**"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "mysql2": "^3.11.3",
    "pg": "^8.13.0",
    "rss-parser": "^3.13.0",
    "superagent": "10.1.0",
    "tedious": "^18.6.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "expect.js": "~0.3.1",
    "mocha": "~10.7.3",
    "nodemon": "^3.1.7",
    "sinon": "19.0.2"
  }
}