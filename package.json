{
  "name": "pkd-and-me-server",
  "version": "0.6.0",
  "description": "Project using Node.js to allow users to rate and review works by and related to Philip K. Dick.",
  "author": "Michael Fisher",
  "copyrightYear": "2023",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/mirfishe/PKD-and-Me-Server-V2"
  },
  "private": true,
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "startOLD": "node app.js",
    "start": "nodemon",
    "amazon": "node ./resources/amazonFetch.js production",
    "amazonall": "node ./resources/amazonFetch.js production All",
    "amazondev": "node ./resources/amazonFetch.js development",
    "amazonalldev": "node ./resources/amazonFetch.js development All"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "**/build/**",
      "**/dist/**",
      "**/logs/**",
      "**/resources/**",
      "**/sql scripts/**",
      "**/src/**"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "dependencies": {
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "mysql2": "^3.2.0",
    "pg": "^8.10.0",
    "rss-parser": "^3.12.0",
    "superagent": "8.0.9",
    "tedious": "^15.1.3"
  },
  "devDependencies": {
    "eslint": "^8.37.0",
    "expect.js": "~0.3.1",
    "mocha": "~10.2.0",
    "nodemon": "^2.0.22",
    "sinon": "15.0.3"
  }
}